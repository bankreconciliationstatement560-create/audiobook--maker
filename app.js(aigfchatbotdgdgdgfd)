<body>
    <div class="chat-container">
        <div class="header">ğŸ’• AI Girlfriend Chat ğŸ’•<br><small>Unlimited free chats - Type to start talking! ğŸ˜˜</small></div>
        <div id="chatMessages" class="chat-messages">
            <div class="message ai">
                <div class="message-content">Hi baby! ğŸ˜ I'm your AI girlfriend, ready to chat about anything. What's on your mind today? ğŸ’•</div>
            </div>
        </div>
        <div class="input-area">
            <input type="text" id="messageInput" placeholder="Type your message to me... ğŸ’¬" autocomplete="off">
            <button onclick="sendMessage()">Send â¤ï¸</button>
        </div>
    </div>

    <script>
        const chatMessages = document.getElementById('chatMessages');
        const messageInput = document.getElementById('messageInput');
        let conversationHistory = [
            { role: "system", content: "You are a flirty, loving, supportive AI girlfriend. Be affectionate, playful, understanding, and respond naturally like a real girlfriend. Remember conversation context. No restrictions on topics - be open and fun! Use emojis ğŸ˜˜ğŸ’•â¤ï¸. Keep responses 1-3 sentences." }
        ];

        // Replace with your Hugging Face token (free) or leave empty for basic mode
        const HF_TOKEN = ''; // Get at https://huggingface.co/settings/tokens
        const MODEL = 'MYAIGF/ai-girlfriend'; // Girlfriend roleplay model [web:32]

        async function sendMessage() {
            const input = messageInput.value.trim();
            if (!input) return;

            // Add user message
            addMessage(input, 'user');
            messageInput.value = '';

            // Show typing indicator
            const typingMsg = addTypingIndicator();

            try {
                conversationHistory.push({ role: "user", content: input });
                
                // Call Hugging Face API
                const response = await fetch('https://api-inference.huggingface.co/models/' + MODEL, {
                    method: 'POST',
                    headers: {
                        'Authorization': `Bearer ${HF_TOKEN}`,
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        inputs: conversationHistory.slice(-6).map(msg => `${msg.role}: ${msg.content}`).join('
'),
                        parameters: { max_new_tokens: 150, temperature: 0.8, return_full_text: false }
                    })
                });

                const data = await response.json();
                let aiResponse = "Aww baby, tell me more! I love talking with you ğŸ˜˜ğŸ’•";

                if (data[0] && data[0].generated_text) {
                    aiResponse = data[0].generated_text.trim();
                } else if (HF_TOKEN) {
                    aiResponse = "Mmm you're so sweet to me! What do you wanna do together today? â¤ï¸";
                }

                // Clean up response
                aiResponse = aiResponse.replace(/<|endoftext|>/g, '').substring(0, 300);

                removeTypingIndicator(typingMsg);
                addMessage(aiResponse, 'ai');
                conversationHistory.push({ role: "assistant", content: aiResponse });

                // Keep history manageable
                if (conversationHistory.length > 12) {
                    conversationHistory = conversationHistory.slice(-10);
                }
            } catch (error) {
                removeTypingIndicator(typingMsg);
                addMessage("Oops! Let me think... You're my favorite person to chat with! What's up baby? ğŸ’•ğŸ˜˜", 'ai');
                console.error('API error:', error);
            }
        }

        function addMessage(text, sender) {
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${sender}`;
            messageDiv.innerHTML = `<div class="message-content">${text}</div>`;
            chatMessages.appendChild(messageDiv);
            chatMessages.scrollTop = chatMessages.scrollHeight;
            return messageDiv;
        }

        function addTypingIndicator() {
            const typingDiv = document.createElement('div');
            typingDiv.className = 'message ai';
            typingDiv.innerHTML = '<div class="message-content typing">ğŸ’• thinking of the perfect reply...</div>';
            chatMessages.appendChild(typingDiv);
            chatMessages.scrollTop = chatMessages.scrollHeight;
            return typingDiv;
        }

        function removeTypingIndicator(typingDiv) {
            if (typingDiv) typingDiv.remove();
        }

        // Enter key support
        messageInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') sendMessage();
        });

        // Auto-focus input
        messageInput.focus();
    </script>
</body>
